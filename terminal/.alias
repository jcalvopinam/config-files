#!/usr/bin/env bash
# Alias

#----------------------------------------------------------------------------------
# Easier navigation
#----------------------------------------------------------------------------------
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias -- -='cd -'

#----------------------------------------------------------------------------------
# Bat setup
#----------------------------------------------------------------------------------
alias cat=/usr/local/bin/bat
alias catn=/bin/cat
alias catl='/usr/local/bin/bat --paging=never'
alias icat='kitty +kitten icat'

#----------------------------------------------------------------------------------
# Always enable colored `lsd` output
#----------------------------------------------------------------------------------
alias ls='lsd --classify'
alias ll='lsd -ltrh --group-directories-first --classify'
alias la='lsd -lah --group-directories-first --classify'
alias lt='lsd --tree --group-directories-first'

#----------------------------------------------------------------------------------
# Colored `ls` output
#----------------------------------------------------------------------------------
#alias ls='ls -F -G'
#alias ll='ls -ltrh -F -G'
#alias la='ls -lah -F -G'

#----------------------------------------------------------------------------------
# Colored `grep` output
#----------------------------------------------------------------------------------
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

#----------------------------------------------------------------------------------
# IP addresses
#----------------------------------------------------------------------------------
alias ipp='dig +short myip.opendns.com @resolver1.opendns.com'
alias ipl='ipconfig getifaddr en0'
alias ipls="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }' | sort"

#----------------------------------------------------------------------------------
# Print each PATH entry on a separate line
#----------------------------------------------------------------------------------
alias path='echo -e ${PATH//:/\\n}'

#----------------------------------------------------------------------------------
# Counters
#----------------------------------------------------------------------------------
alias tf='find . -type f | wc -l'
alias tfd='find . -maxdepth 1 -mindepth 1 -type d -exec sh -c '\''echo "{} : $(find "{}" -type f | wc -l)" file\(s\)'\'' \;'

#----------------------------------------------------------------------------------
# ToggleTheme script
#----------------------------------------------------------------------------------
#alias toggleTheme='. $HOME/codespace/config-files/mac/scripts/toggle-theme.sh'

#----------------------------------------------------------------------------------
# Reload alias
#----------------------------------------------------------------------------------
alias rbash='source ~/.bash_profile'
alias rzshrc='source ~/.zshrc'

#----------------------------------------------------------------------------------
# List folders as tree
#----------------------------------------------------------------------------------
alias lst="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"

#----------------------------------------------------------------------------------
# Folders
#----------------------------------------------------------------------------------
alias space='cd ~/space'

#----------------------------------------------------------------------------------
# General
#----------------------------------------------------------------------------------
alias eh!='nvim ~/.zsh_history'
